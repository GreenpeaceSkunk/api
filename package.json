{
  "name": "greenpeace-skunk-api",
  "version": "1.0.0",
  "description": "Greanpeace - Skunk API",
  "author": "https://github.com/dantovbein",
  "license": "ISC",
  "engines": {
    "node": "18.x"
  },
  "bugs": {
    "url": "https://github.com/GreenpeaceSkunk/api/issues"
  },
  "main": "dist/index.js",
  "scripts": {
    "server:start:development": "npm run server:env:development && nodemon -x ts-node src/index.ts",
    "server:start:staging": "npm run server:env:staging && npm run server:build && NODE_ENV=test NODE_PATH=./build node --trace-deprecation build/index.js",
    "server:start:production": "npm run server:env:production && npm run server:build && NODE_PATH=./build node --trace-deprecation build/index.js",
    "server:env:development": "npm run server:remove:env && cp .env.development.sample .env",
    "server:env:staging": "npm run server:remove:env && cp .env.test.sample .env",
    "server:env:production": "npm run server:remove:env && cp .env.production.sample .env",
    "server:remove:env": "rm -rf .env",
    "server:create:collections": "ts-node src/database/scripts.ts",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "lint": "eslint . --ext .ts --fix",
    "server:build": "npm run types && tsc --build tsconfig.json",
    "types": "ln -sf $PWD/src/types $PWD/node_modules/@types/greenpeace",
    "server:start:old": "npm run server:env:production && ts-node .",
    "start:dev": "nodemon src/index.ts",
    "build:dev": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GreenpeaceSkunk/api.git"
  },
  "homepage": "https://github.com/GreenpeaceSkunk/api#readme",
  "dependencies": {
    "@hubspot/api-client": "^11.1.0",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "form-data": "^4.0.0",
    "https-proxy-agent": "^7.0.2",
    "joi": "^17.13.3",
    "moment": "^2.30.1",
    "mongodb": "^6.8.0",
    "mongoose": "^8.4.4",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "pm2": "^5.1.2",
    "transbank-sdk": "^5.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}

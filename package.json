{
  "name": "greenpeace-skunk-api",
  "version": "1.0.0",
  "description": "Greanpeace - Skunk API",
  "author": "https://github.com/dantovbein",
  "license": "ISC",
  "engines": {
    "node": "14.x"
  },
  "bugs": {
    "url": "https://github.com/GreenpeaceSkunk/api/issues"
  },
  "main": "dist/index.js",
  "scripts": {
    "server:start": "ts-node .",
    "server:start:watch": "nodemon -x ts-node src/index.ts",
    "server:create:collections": "ts-node src/database/scripts.ts",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "lint": "eslint . --ext .ts --fix",
    "server:build": "tsc --build tsconfig.json",
    "types": "ln -s $PWD/src/types $PWD/node_modules/@types/greenpeace",
    "start:production": "NODE_PATH=./build node build/index.js",
    "start:dev": "nodemon src/index.ts",
    "build:dev": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GreenpeaceSkunk/api.git"
  },
  "homepage": "https://github.com/GreenpeaceSkunk/api#readme",
  "dependencies": {
    "@hubspot/api-client": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^6.1.8",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "pm2": "^5.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.3",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}

{
  "name": "greenpeace-skunk-api",
  "version": "1.0.0",
  "description": "Greanpeace - Skunk API",
  "author": "https://github.com/dantovbein",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GreenpeaceSkunk/api/issues"
  },
  "main": "dist/server.js",
  "scripts": {
    "server:start": "ts-node .",
    "server:start:watch": "nodemon -x ts-node src/server.ts",
    "server:create:collections": "ts-node src/database/scripts.ts",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "lint": "eslint . --ext .ts --fix",
    "build": "tsc --build tsconfig.json",
    "types": "ln -s $PWD/src/types $PWD/node_modules/@types/greenpeace"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GreenpeaceSkunk/api.git"
  },
  "homepage": "https://github.com/GreenpeaceSkunk/api#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.15",
    "nodemon": "^2.0.7",
    "pm2": "^4.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/mongoose": "^5.10.3",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
